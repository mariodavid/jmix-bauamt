<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://antragDetailView.title"
      focusComponent="form">
    <data>
        <instance id="antragDc"
                  class="de.bunge.bauamt.entity.Antrag">
            <fetchPlan extends="_base">
                <property name="bauherr" fetchPlan="_instance_name"/>
                <property name="bauvorlagen" fetchPlan="_base"/>
                <property name="entwurfsverfasser" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader/>
            <collection id="bauvorlagenDc" property="bauvorlagen"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="antragDc">
            <comboBox id="antragsartField" property="antragsart"/>
            <comboBox id="statusField" property="status"/>
            <textField id="aktenzeichenField" property="aktenzeichen"/>
            <datePicker id="antragseingangField" property="antragseingang"/>
            <entityPicker id="bauherrField" property="bauherr">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textArea id="vorhabentextField" height="9.5em" property="vorhabentext"/>
            <entityPicker id="entwurfsverfasserField" property="entwurfsverfasser">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
        </formLayout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button action="bauvorlagenDataGrid.create"/>
            <button action="bauvorlagenDataGrid.edit"/>
            <button action="bauvorlagenDataGrid.remove"/>
        </hbox>
        <dataGrid id="bauvorlagenDataGrid" dataContainer="bauvorlagenDc" width="100%" minHeight="20em">
            <actions>
                <action id="create" type="list_create">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="edit" type="list_edit">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns>
                <column property="typ"/>
                <column property="pflicht"/>
                <column property="datei"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
